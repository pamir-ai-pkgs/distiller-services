core/*.py opt/distiller-services/core/

# Service modules
services/*.py opt/distiller-services/services/

# Scripts (including update-hostname.sh)
scripts/*.sh opt/distiller-services/scripts/

# Templates
templates/*.html opt/distiller-services/templates/

# Static files
static/css/*.css opt/distiller-services/static/css/
static/js/*.js opt/distiller-services/static/js/
static/images/*.svg opt/distiller-services/static/images/
static/fonts/*.ttf opt/distiller-services/static/fonts/

# Systemd service
distiller-wifi.service lib/systemd/system/

# Python package files
pyproject.toml opt/distiller-services/
